{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "@types/*": ["./resources/js/types/*"],
            "@types": ["./resources/js/types"]
        },
        "types": ["node", "vite/client"]
    }
}
